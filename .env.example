# ===========================================
# PHARBIT BLOCKCHAIN CONFIGURATION
# ===========================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control

# ===========================================
# AWS CONFIGURATION (REQUIRED)
# ===========================================
AWS_REGION=eu-north-1
AWS_S3_BUCKET=pharbit-blockchain
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
# PostgreSQL Database
DATABASE_URL=postgresql://username:password@localhost:5432/pharbit
DB_HOST=localhost
DB_PORT=5432
DB_NAME=pharbit
DB_USER=pharbit_user
DB_PASSWORD=your_db_password_here

# Redis Cache
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here

# LevelDB for Blockchain
LEVELDB_PATH=./blockchain-data

# ===========================================
# SECURITY CONFIGURATION
# ===========================================
# JWT Secret (generate with: openssl rand -base64 64)
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Encryption Key (generate with: openssl rand -base64 32)
ENCRYPTION_KEY=your_encryption_key_here

# Password Hashing
BCRYPT_ROUNDS=12

# API Security
API_RATE_LIMIT=100
API_RATE_WINDOW=900000

# ===========================================
# APPLICATION CONFIGURATION
# ===========================================
NODE_ENV=development
PORT=3000
API_BASE_URL=http://localhost:3000
FRONTEND_URL=http://localhost:3000

# Blockchain Configuration
BLOCKCHAIN_DIFFICULTY=4
BLOCKCHAIN_MINING_REWARD=50
BLOCKCHAIN_BLOCK_TIME=60000

# P2P Network
P2P_PORT=5001
P2P_PEERS=ws://localhost:5001

# ===========================================
# PHARMACEUTICAL COMPLIANCE
# ===========================================
# FDA 21 CFR Part 11 Compliance
COMPLIANCE_MODE=FDA_21CFR11
AUDIT_RETENTION_DAYS=2555
DIGITAL_SIGNATURE_REQUIRED=true

# DSCSA Serialization
DSCSA_ENABLED=true
SERIALIZATION_FORMAT=EPCIS

# Document Management
DOCUMENT_ENCRYPTION=true
DOCUMENT_RETENTION_DAYS=2555
VIRUS_SCAN_ENABLED=true

# ===========================================
# MONITORING & LOGGING
# ===========================================
LOG_LEVEL=info
LOG_FILE=./logs/pharbit.log
LOG_MAX_SIZE=20m
LOG_MAX_FILES=14d

# CloudWatch (if using AWS monitoring)
CLOUDWATCH_ENABLED=false
CLOUDWATCH_GROUP=pharbit-blockchain
CLOUDWATCH_STREAM=application

# Health Check
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000

# ===========================================
# EMAIL CONFIGURATION
# ===========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password_here
EMAIL_FROM=noreply@pharbit.com

# ===========================================
# EXTERNAL SERVICES
# ===========================================
# Virus Scanning Service
VIRUS_SCAN_API_URL=https://api.virustotal.com/v2
VIRUS_SCAN_API_KEY=your_virustotal_api_key

# Document Validation
DOCUMENT_VALIDATION_ENABLED=true
PDF_SIGNATURE_VALIDATION=true

# ===========================================
# DEVELOPMENT CONFIGURATION
# ===========================================
# Hot Reload
HOT_RELOAD=true
DEBUG_MODE=false

# Testing
TEST_DATABASE_URL=postgresql://test_user:test_pass@localhost:5432/pharbit_test
TEST_REDIS_URL=redis://localhost:6379/1

# ===========================================
# PRODUCTION OVERRIDES
# ===========================================
# Uncomment and modify for production
# NODE_ENV=production
# PORT=80
# API_BASE_URL=https://api.pharbit.com
# FRONTEND_URL=https://pharbit.com
# LOG_LEVEL=warn
# DEBUG_MODE=false