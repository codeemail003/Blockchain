# Environment: development | staging | production
NODE_ENV=development

# Server
PORT=3000
CORS_ORIGINS=*
JSON_BODY_LIMIT=1mb
RATE_WINDOW_MS=60000
RATE_MAX=120

# HTTPS (set to true in prod with valid key/cert paths)
HTTPS_ENABLED=false
HTTPS_KEY_PATH=/etc/ssl/private/pharbitchain.key
HTTPS_CERT_PATH=/etc/ssl/certs/pharbitchain.crt

# Blockchain
DB_PATH=./blockchain-db
DIFFICULTY=4
MINING_REWARD=50
BLOCK_SIZE=1000

# Network
NETWORK_ID=pharbitchain-local
MAX_PEERS=50

# Security
JWT_SECRET=change-me

