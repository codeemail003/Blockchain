{
  "name": "pharbit-blockchain",
  "version": "1.0.0",
  "description": "Pharmaceutical Blockchain Supply Chain Management System",
  "main": "index.js",
  "scripts": {
    "install:all": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "dev": "concurrently \"npm run backend:dev\" \"npm run frontend:dev\"",
    "backend:dev": "cd backend && npm run dev",
    "frontend:dev": "cd frontend && npm start",
    "backend:start": "cd backend && npm start",
    "frontend:start": "cd frontend && npm start",
    "test": "npm run test:contracts && npm run test:backend && npm run test:frontend",
    "test:contracts": "cd contracts && npm test",
    "test:backend": "cd backend && npm test",
    "test:frontend": "cd frontend && npm test",
    "build": "cd frontend && npm run build",
    "deploy:contracts": "cd contracts && npm run deploy",
    "deploy:local": "cd contracts && npm run deploy:local",
    "deploy:sepolia": "cd contracts && npm run deploy:sepolia",
    "verify:contracts": "cd contracts && npm run verify",
    "lint": "npm run lint:backend && npm run lint:frontend",
    "lint:backend": "cd backend && npm run lint",
    "lint:frontend": "cd frontend && npm run lint",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "clean": "rm -rf node_modules backend/node_modules frontend/node_modules frontend/build",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "setup": "npm run install:all && npm run setup:env",
    "setup:env": "cp backend/.env.example backend/.env && cp frontend/.env.example frontend/.env",
    "start:blockchain": "./scripts/start-blockchain.sh",
    "start:server": "./scripts/start-server.sh"
  },
  "keywords": [
    "blockchain",
    "pharmaceutical",
    "supply-chain",
    "ethereum",
    "smart-contracts",
    "react",
    "nodejs"
  ],
  "author": "PharbitChain Team",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "prettier": "^3.1.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/pharbitchain/pharbit-blockchain.git"
  },
  "bugs": {
    "url": "https://github.com/pharbitchain/pharbit-blockchain/issues"
  },
  "homepage": "https://github.com/pharbitchain/pharbit-blockchain#readme"
}